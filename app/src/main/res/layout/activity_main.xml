<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"

    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/melody" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jessica Judith"
        android:layout_below="@+id/image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#FD1967"
        android:textStyle="bold"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budding Programmer"
        android:layout_below="@id/text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#E19DB4"
        android:textStyle="italic"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialization"
        android:layout_below="@id/des"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#DD3EF8"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/colName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Clg"
        android:layout_below="@id/edu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#E5CDF6"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="31dp"
        android:text="2019-2023"
        android:textColor="#E5CDF6"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/Hobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:layout_below="@id/colName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#0490B3"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/Web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Development"
        android:layout_below="@id/Hobby"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#BEE3F6"
        android:textStyle="italic"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Development"
        android:layout_below="@id/Web"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#BEE3F6"
        android:textStyle="italic"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/GH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/App"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/pink"

        android:text="GitHub" />

    <Button
        android:id="@+id/LI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/App"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="48dp"

        android:background="@color/cardview_dark_background"
        android:text="LinkedIn" />

</RelativeLayout>
